<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.king.photo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/text_while"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.yellow.photo.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yellow.photo.activity.ImageGridActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.yellow.photo.activity.TestPicActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yellow.photo.activity.PhotoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yellow.photo.activity.AlbumActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.yellow.photo.activity.ShowImageFilesActivity" >
        </activity>
        <activity android:name="com.yellow.photo.activity.ShowFolderPhotosActivity" >
        </activity>
        <activity android:name="com.yellow.photo.activity.GalleryActivity" >
        </activity>
        <activity android:name="com.yellow.clippic.ClipImgActivity" >
        </activity>
    </application>

</manifest>